<h2>Add New Person</h2>
<form name="personForm" action="/<%= $action %>" onsubmit="return validateForm()" method="post">
	<div>
		<input type="text" placeholder="Enter your first name" name="firstName" value="<%= $personToEdit.firstName %>" autofocus required>
		<input type="text" placeholder="Enter your last name" name="lastName" value="<%= $personToEdit.lastName %>" required>
	</div>
	<div>
		<input type="radio" name="sex" value="male" <%= $male %> checked>Male
		<input type="radio" name="sex" value="female" <%= $female %>>Female
	</div>
	<div>
		<input type="text" placeholder="(xxx) xxx-xxxx" name="phoneNumber" value="<%= $personToEdit.phoneNumber %>">
	</div>
	<div class="<%= 'hidden' if $personToEdit.hobbies[0] != '' %>">
		<p>Do you have hobbies?</p>
		<div class="radio"><label><input type="radio" name="showHobbies" value="yes" <%= "checked" if $personToEdit.hobbies[0] != '' %>>Yes</label></div>
		<div class="radio"><label><input type="radio" name="showHobbies" value="no" <%= "checked" if $personToEdit.hobbies[0] == '' %>>No</label></div>
	</div>
	<fieldset id="hobbies" class="hidden">
		<div class="checkbox"><label><input type="checkbox" name="hobby[videoGames]" value="Video Games"
			
			<%= "checked" if $personToEdit.hobbies[$personToEdit.hobbies.index{|hobby| hobby == "Video Games"} || 0] == "Video Games"%>

			>Video Games</label></div>

		<div class="checkbox"><label><input type="checkbox" name="hobby[skateboarding]" value="Skateboarding"
			
			<%= "checked" if $personToEdit.hobbies[$personToEdit.hobbies.index{|hobby| hobby == "Skateboarding"} || 0] == "Skateboarding"%>

			>Skateboarding</label></div>

		<div class="checkbox"><label><input type="checkbox" name="hobby[reading]" value="Reading"

			<%= "checked" if $personToEdit.hobbies[$personToEdit.hobbies.index{|hobby| hobby == "Reading"} || 0] == "Reading"%>

			>Reading</label></div>

		<div class="checkbox"><label><input type="checkbox" name="hobby[stampCollecting]" value="Stamp Collecting"
			
			<%= "checked" if $personToEdit.hobbies[$personToEdit.hobbies.index{|hobby| hobby == "Stamp Collecting"} || 0] == "Stamp Collecting"%>

			>Stamp Collecting</label></div>
	</fieldset>
	<button type="submit" class="btn btn-primary">Save</button>
	<a href="/personList" class="btn btn-default">Cancel</a>
</form>