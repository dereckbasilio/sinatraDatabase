<h2>People</h2>
<p id="validationError"></p>
<hr>
<a class="btn btn-success" href="/newPerson">Add</a>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th></th>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Sex</th>
			<th>Phone Number</th>
			<th>Hobbies</th>
		</tr>
	</thead>
	<tbody>
		<% @people.each do |person| %>
		<tr>
			<td>
				<a href="/edit?id=<%= person.id %>"><i class="glyphicon glyphicon-edit"></i></a> |
				<a href="/delete?id=<%= person.id %>" class="removeButton"><i class="glyphicon glyphicon-remove"></i></a>
			</td>
			<td><%= person.id %></td>
			<td><%= person.firstName %></td>
			<td><%= person.lastName %></td>
			<td><%= person.sex %></td>
			<td><%= person.phoneNumber %></td>
			<td>
				<% person.hobbies.each do |hobby| %>
					<% if hobby != nil %>
						<%= hobby %><br>
					<% end %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>